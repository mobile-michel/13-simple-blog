---
layout: base
---
<header>
    {% include 'nav-primary' %}
    <h1>{{ site.name }}</h1>
</header>
<main>
    {% if folder %}
    <aside>
        {% include 'nav-secondary' %}
    </aside>
    {% endif %}
    <section aria-labelledby="{{ title | slugify }}">
        <h2 id="{{ title | slugify }}">{{ title }}</h2>
        <special-description>{% if description %}<p>{{ description }}</p>{% endif %}</special-description>
        {{ content }}
    </section>
</main>
<footer>
    {% include 'nav-footer' %}
    {% render 'copyright' %}
</footer>